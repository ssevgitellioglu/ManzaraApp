<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgManzara"
                app:layout_constraintEnd_toStartOf="@+id/txtBaslik"
                app:layout_constraintBottom_toTopOf="@+id/txtAciklama"
                app:layout_constraintTop_toTopOf="@+id/txtAciklama" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="7dp"/>
        <TextView
                android:text=""
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/txtBaslik"
                android:textSize="24sp"
                android:textAlignment="viewStart"
                android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/imgManzara"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="11dp"
                app:layout_constraintBottom_toTopOf="@+id/txtAciklama" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="120dp"/>
        <TextView
                android:text=""
                android:layout_width="121dp"
                android:layout_height="0dp"
                android:id="@+id/txtAciklama"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/txtBaslik"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="6dp"
                app:layout_constraintTop_toBottomOf="@+id/txtBaslik" android:layout_marginBottom="630dp"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>